{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "outDir": "./public/client",
        "rootDir": "./src/client",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/client/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}